
@{
    ViewBag.Title = "Fornecedor";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/Fornecedor.js"></script>
</head>
<body>
    <div class="container">
        <<h2>Fornecedores</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalFornecedor" onclick="clearTextBox();">Novo Fornecedor</button><br /><br />
        <input type="text" id="search" class="form-control" placeholder="Digite para buscar">
        <button type="button" class="btn btn-primary" id="Buscar" onclick="Search()"><span class="fa fa-search"></span> Buscar</button>
        <table class="table table-bordered table-hover" id="tableFornecedor">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Tipo Pessoa
                    </th>
                    <th>
                        CNPJ/CPF
                    </th>
                    <th>
                        RG
                    </th>
                    <th>
                        Data Nascimento
                    </th>
                    <th>
                        Data Inclusão
                    </th>
                    <th>
                        Telefones
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    <div class="modal fade" id="modalFornecedor" tabindex="-1" role="dialog" aria-labelledby="modalFornecedorLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>*@
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="modalFornecedorLabel">Novo Fornecedor</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="ID">ID</label>
                            <input type="text" class="form-control" id="ID" placeholder="ID" />
                        </div>
                        <div class="form-group">
                            <label for="Nome">Nome</label>
                            <input type="text" class="form-control" id="Nome" placeholder="Nome" />
                        </div>
                        <datalist id="TP">
                            <option value="PJ">
                            <option value="PF">
                        </datalist>
                        <div class="form-group">
                            <label for="TipoPessoa">Tipo Pessoa</label>
                            <input type="text" list="TP" class="form-control" id="TipoPessoa" placeholder="PJ ou PF" />
                        </div>
                        <div class="form-group">
                            <label for="CNPJ">CNPJ ou CPF</label>
                            <input type="text" class="form-control" id="CNPJ" placeholder="CNPJ ou CPF" />
                        </div>
                        <div class="form-group">
                            <label for="RG">RG</label>
                            <input type="text" class="form-control" id="RG" placeholder="RG" />
                        </div>
                        <div class="form-group">
                            <label for="DataNascimento">Data Nascimento</label>
                            <input type="text" class="form-control" id="DataNascimento" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="form-group">
                            <label for="Telefone">Telefone</label>
                            <input type="text" class="form-control" id="Telefone" placeholder="Telefone" data-toggle="tooltip" data-placement="right" title="Separar por /"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Adicionar</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


